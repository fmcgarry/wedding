<!-- Masthead -->
<header class="masthead" id="home">
    <div class="container px-4 px-lg-5 vh-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="fancy-font text-white font-weight-bold">Freddy | Breana</h1>
                <h5 class="text-white font-weight-bold">We're getting married!</h5>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <div class="countdown d-flex justify-content-center text-white-75 mb-2">
                    <div class="time-unit mx-2">
                        <h3 id="days">@TimeLeft.Days.ToString("00")</h3>
                        <p>Days</p>
                    </div>
                    <div class="time-unit mx-2">
                        <h3 id="hours">@TimeLeft.Hours.ToString("00")</h3>
                        <p>Hours</p>
                    </div>
                    <div class="time-unit mx-2">
                        <h3 id="minutes">@TimeLeft.Minutes.ToString("00")</h3>
                        <p>Minutes</p>
                    </div>
                    <div class="time-unit mx-2">
                        <h3 id="seconds">@TimeLeft.Seconds.ToString("00")</h3>
                        <p>Seconds</p>
                    </div>
                </div>
                <a class="btn btn-primary btn-xl" href="#info">Skip to info</a>
            </div>
            <div id="masthead-scroll-down" class="wow shakeY" data-wow-iteration="infinite" data-wow-duration="10s">
                <i class="fas fa-chevron-down text-white display-5"></i>
            </div>
