<script>
    // Show/hide the btn-back-to-top and masthead-scroll-down items on scroll
    let scrollTopButton = document.getElementById("btn-back-to-top");
    let mastheadScrollDownButton = document.getElementById("masthead-scroll-down");

    window.onscroll = function () {
        if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
            scrollTopButton.style.display = "block";
            mastheadScrollDownButton.style.display = "none";
        } else {
            scrollTopButton.style.display = "none";
            mastheadScrollDownButton.style.display = "block";
        }
    };
</script>
<script>
    // Turn the navbar white when scrolling past masthead on large screens
    const navbar = document.getElementById("mainNav");
    const masthead = document.getElementById("home");

    function onScroll() {
        if (window.scrollY > masthead.offsetHeight) {
            navbar.classList.add("navbar-shrink");
        } else {
            navbar.classList.remove("navbar-shrink");
        }
    }

    window.addEventListener("scroll", onScroll);
    onScroll();
</script>
@code {
    private DateTime TargetDate = new DateTime(2025, 5, 31, 14, 0, 0); // May 31st, 2025 @ 1pm
    private TimeSpan TimeLeft;
    private System.Threading.Timer? _timer;

    protected override void OnInitialized()
    {
        UpdateTimeLeft();
        _timer = new System.Threading.Timer(UpdateCountdown, null, 0, 1000);
    }

    private void UpdateCountdown(object? state)
    {
        UpdateTimeLeft();
        InvokeAsync(StateHasChanged);
    }

    private void UpdateTimeLeft()
    {
        TimeLeft = TargetDate - DateTime.UtcNow;
    }
}